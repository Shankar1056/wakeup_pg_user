<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBreakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_transperent_black"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        android:layout_margin="@dimen/margin_50"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:gravity="center">

            <TextView
                android:id="@+id/textViewBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_breakfast"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_16"/>

            <TextView
                android:id="@+id/textViewBreakfastItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idly, Vada, Sambar, Chutney Tea/Coffee"
                android:singleLine="false"
                android:layout_marginTop="@dimen/margin_16"
                />
            <RadioGroup
                android:id="@+id/takingMealBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_8"
               >

                <TextView
                    android:id="@+id/textViewTakingMealBreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taking meal"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:paddingLeft="5dp"
                    android:text="@string/title_yes" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:paddingLeft="5dp"
                    android:text="@string/title_no" />
            </RadioGroup>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_transperent_black"
        android:layout_margin="@dimen/margin_50"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cardViewBreakfast"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:gravity="center">
        <TextView
            android:id="@+id/textViewLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_16"
            android:text="@string/title_lunch"/>
            <TextView
                android:id="@+id/textViewLunchItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mix Veg, Roti, Rice, Dal, Curd"
                android:layout_marginTop="@dimen/margin_16"
                />
            <RadioGroup
                android:id="@+id/takingMealLunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_8"
                >

                <TextView
                    android:id="@+id/textViewTakingMealLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taking meal"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:paddingLeft="5dp"
                    android:text="@string/title_yes" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:paddingLeft="5dp"
                    android:text="@string/title_no" />
            </RadioGroup>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_50"
        app:cardElevation="0dp"
        android:background="@drawable/rounded_corner_transperent_black"
        app:layout_constraintTop_toBottomOf="@+id/cardViewLunch">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:gravity="center">
        <TextView
            android:id="@+id/textViewDinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_16"
            android:text="@string/title_dinner"/>

            <TextView
                android:id="@+id/textViewDinnerItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:text="Palak Paneer, Roti, Dal, Rice, Curd" />
            <RadioGroup
                android:id="@+id/takingMealDinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_8"
                >

                <TextView
                    android:id="@+id/textViewTakingMealDinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taking meal"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:paddingLeft="5dp"
                    android:text="@string/title_yes" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15"
                    android:paddingLeft="5dp"
                    android:text="@string/title_no" />
            </RadioGroup>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>