<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/complaintEntry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="@dimen/margin_4"
    android:background="@drawable/elevation_round_transp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView

            android:id="@+id/imageViewComplaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:minWidth="50dp"
            android:minHeight="50dp"
            app:srcCompat="@drawable/ic_chat_1_" />

    <TextView
        android:id="@+id/textViewComplaintName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_margin="@dimen/padding_10"
        android:text="Chatdfkefnefke"
        android:gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewComplaint" />

    </androidx.constraintlayout.widget.ConstraintLayout>
