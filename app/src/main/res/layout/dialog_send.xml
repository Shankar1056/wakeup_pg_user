<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewSend"
        android:layout_width="61.33dp"
        android:layout_height="61.33dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="160dp"
        android:src="@drawable/ic_sent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="205dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="177dp"
        android:text="@string/tittle_sent"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/text_size_21_33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSend" />

</androidx.constraintlayout.widget.ConstraintLayout>